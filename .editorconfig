root = true

# Padrões para todos os arquivos
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Arquivos Python
[*.py]
indent_style = space
indent_size = 4

# Arquivos Markdown (ex: README.md) — manter espaços no final de linha
[*.md]
trim_trailing_whitespace = false
